{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es6", "dom", "DOM", "DOM.Iterable", "ESNext"],
    "rootDir": "src",
    "module": "es6",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "root/*": ["./*"]
    }
  },
  "include": ["src", "src/custom.d.ts"],
  "exclude": ["node_modules"],
  "typeRoots": ["./types"]
}
